// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String? 
  books Book[]
  bookMark bookMark[]
  registrationDate DateTime @default(now())
}


model Book {
  id Int @id @default(autoincrement())
  title String
  author String
  userId Int
  user User @relation(fields: [userId], references: [id])
  image String
  flaggedBook flaggedBook[]
  Review Review[]
  bookMark bookMark[]
}

model flaggedBook {
  id Int @id @default(autoincrement())
  bookId Int
  book Book @relation(fields: [bookId], references: [id])
  userId Int
  reason String
  date String
}
 
model Review {
  id Int @id @default(autoincrement())
  bookId Int
  book Book @relation(fields: [bookId], references: [id])
  userId Int
  rating Int
  review String
  date String
}

model bookMark {
  id Int @id @default(autoincrement())
  bookId Int
  book Book @relation(fields: [bookId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
  date String
}

